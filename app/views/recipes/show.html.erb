<h2 class="text-center text-capitalize mt-4"><%= @recipe.name %></h2>
<div class="d-flex justify-content-between">
  <p>
    <strong>Preparation time:</strong>
    <%= @recipe.preparation_time %>
  </p>
  <div class="form-check form-switch d-flex flex-row-reverse">
    <input class="form-check-input success" type="checkbox" role="switch" id="flexSwitchCheckCheckedDisabled" checked: <% @recipe.public %> %>
    <label class="form-check-label pe-5" for="flexSwitchCheckCheckedDisabled">Pubic </label>
  </div>
</div>


<p>
  <strong>Cooking time:</strong>
  <%= @recipe.cooking_time %>
</p>
<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Public:</strong>
  <%= @recipe.public %>
</p>
<div class="d-flex justify-content-between mt-3 mb-5">
  <button class="btn btn-outline-dark">General shopping list</button>
  <%= link_to "Add ingredient", new_recipe_food_path, class: "btn btn-outline-dark" %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @recipefood.each do |recipe_food| %>
      <tr>
        <td>
          <%= recipe_food.food.name %>
        </td>

        <td>
          <%= recipe_food.quantity %>
        </td>

        <td> 
          <%= (recipe_food.food.price * recipe_food.quantity) %>
        </td>
      <td>
        <div class="d-flex">
          <%= link_to "Modify", edit_recipe_food_path(recipe_food), class: "btn btn-outline-info me-3" %>
          <%= button_to "Delete", recipe_food, method: :delete, class: "btn btn-outline-danger" %>
        </div>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
